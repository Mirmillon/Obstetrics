<UserControl x:Class="Echographie.ControlUser.UnitBiometrie"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Echographie.ControlUser"
             Name="unitBiometrie"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="1" Content="{Binding Element}"  ></Label>
        <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Background="Red"   Visibility="Hidden" Text="{Binding Cle}" ></TextBox>
        <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="1" Background="Green"  Visibility="Hidden" Text="{Binding Dimension}"></TextBox>
        <TextBox  Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="1" Grid.RowSpan="1"  Text="{Binding Taille}"></TextBox>
        <Label Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="1" Grid.RowSpan="1"   >MM</Label>
    </Grid>
</UserControl>
